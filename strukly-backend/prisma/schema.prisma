generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  goalItems       GoalItem[]
  expenses        ExpenseHeader[]
  budgetHistories BudgetHistory[]
}

model BudgetHistory {
  userID       String
  month        Int
  year         Int
  budget       Decimal @default(0)
  unusedBudget Decimal @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userID], references: [id])

  @@id([userID, month, year])
}

model ExpenseHeader {
  id             String   @id @default(uuid())
  dateTime       DateTime
  vendorName     String
  category       String
  subtotalAmount Float
  taxAmount      Float
  discountAmount Float
  serviceAmount  Float
  totalAmount    Float
  myAmount       Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userID  String
  user    User   @relation(fields: [userID], references: [id])
  members Json?

  items ExpenseItem[]
}

model ExpenseItem {
  id          String @id @default(uuid())
  name        String
  quantity    Int
  singlePrice Float
  totalPrice  Float

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  assignedMember String?

  expenseID String
  expense   ExpenseHeader @relation(fields: [expenseID], references: [id], onDelete: Cascade)
}

model GoalItem {
  id          String    @id @default(uuid())
  name        String
  price       Int
  deposited   Int
  completed   Boolean   @default(false)
  completedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userID String
  user   User   @relation(fields: [userID], references: [id])
}
